<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/santaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Santa Name"
        android:textSize="25sp"
        android:textColor="#314099"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/contactInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="contactInfo"
        android:textSize="16sp"
        android:textColor="#c83f3e40"
        android:layout_below="@+id/santaName"
        android:layout_alignLeft="@+id/santaName"
        android:layout_alignStart="@+id/santaName" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Interests"
        android:textSize="16sp"
        android:textColor="#314099"
        android:layout_below="@+id/contactInfo"
        android:layout_alignLeft="@+id/contactInfo"
        android:layout_alignStart="@+id/contactInfo" />

    <TextView
        android:id="@+id/santaInterests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="santa interests"
        android:textSize="16sp"
        android:textColor="#c83f3e40"
        android:layout_below="@+id/textView17"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17" />

</RelativeLayout>
