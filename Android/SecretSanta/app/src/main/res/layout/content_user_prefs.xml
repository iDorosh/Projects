<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.iandorosh.secretsanta.UserPrefs"
    tools:showIn="@layout/activity_user_prefs">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/userName"
        android:hint="Alex Johnson"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/userContact"
        android:hint="alexjohnson@work.com"
        android:layout_marginTop="33dp"
        android:layout_alignLeft="@+id/editText7"
        android:layout_alignStart="@+id/editText7"
        android:layout_below="@+id/textView5"
        android:gravity="center"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:id="@+id/userNumberCheck"
        android:checked="true"
        android:textColor="#314099"
        android:textSize="18sp"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/textView18"
        android:layout_alignLeft="@+id/userInterests"
        android:layout_alignStart="@+id/userInterests" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Mail"
        android:id="@+id/userEmailCheck"
        android:checked="false"
        android:textColor="#314099"
        android:textSize="18sp"
        android:layout_alignTop="@+id/userNumberCheck"
        android:layout_toRightOf="@+id/textView19"
        android:layout_toEndOf="@+id/textView19" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/userInterests"
        android:hint="football, hockey, the walking dead"
        android:gravity="center"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/userNumberCheck"
        android:layout_alignLeft="@+id/userName"
        android:layout_alignStart="@+id/userName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Your Name"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:textColor="#314099"
        android:layout_below="@+id/userName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Your Interests"
        android:id="@+id/textView19"
        android:textSize="18sp"
        android:textColor="#314099"
        android:layout_below="@+id/userInterests"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Your Contact Info"
        android:id="@+id/textView18"
        android:textSize="18sp"
        android:textColor="#314099"
        android:layout_below="@+id/userContact"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User Information"
        android:id="@+id/textView8"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="You can enter your information so it can be easily added to any groups that you create."
        android:id="@+id/textView20"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

</RelativeLayout>
