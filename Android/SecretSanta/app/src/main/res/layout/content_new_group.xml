<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.iandorosh.secretsanta.NewGroup"
    tools:showIn="@layout/activity_new_group">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/newGroupName"
        android:layout_marginTop="54dp"
        android:hint="work, family, friends"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Group Name"
        android:id="@+id/textView3"
        android:textSize="18sp"
        android:textColor="#314099"
        android:layout_below="@+id/newGroupName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Additional Infromation"
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:textColor="#314099"
        android:layout_below="@+id/newGroupInfo"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/newGroupInfo"
        android:hint="Our party will be on December 19th"
        android:layout_marginTop="63dp"
        android:gravity="center"
        android:layout_below="@+id/newGroupName"
        android:layout_alignLeft="@+id/newGroupName"
        android:layout_alignStart="@+id/newGroupName" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Include My Info"
        android:id="@+id/includeUserInfo"
        android:checked="false"
        android:textColor="#314099"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Checking will automatically add your information to the new group"
        android:id="@+id/textView21"
        android:gravity="center"
        android:layout_below="@+id/includeUserInfo"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
