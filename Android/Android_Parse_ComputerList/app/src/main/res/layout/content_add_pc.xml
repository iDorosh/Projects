<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.idorosh.androidusersdata.AddPC"
    tools:showIn="@layout/activity_add_pc"
    android:background="#272e3d">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scrollIndicators="none">

        <RelativeLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true" >

            <android.support.design.widget.TextInputLayout
                android:layout_width="205dp"
                android:layout_height="40dp"
                android:background="@drawable/round"
                android:id="@+id/view3"
                android:layout_below="@+id/view9"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/addMotherboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Motherboard"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="Next"
                    android:imeOptions="actionUnspecified"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="#00cecece"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#282f3d"
                    android:gravity="center|center_vertical" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:background="@drawable/round"
                android:id="@+id/view87"
                android:layout_gravity="right"
                android:layout_above="@+id/scrollView"
                android:layout_alignParentEnd="true">

                <EditText
                    android:id="@+id/addMotherboardPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="Next"
                    android:imeOptions="actionUnspecified"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="#00cecece"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#282f3d"
                    android:gravity="center|center_vertical"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:background="@drawable/round"
                android:id="@+id/view879"
                android:layout_gravity="right"
                android:layout_alignTop="@+id/view9"
                android:layout_alignParentEnd="true">

                <EditText
                    android:id="@+id/addCasePrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="Next"
                    android:imeOptions="actionUnspecified"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="#00cecece"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#282f3d"
                    android:gravity="center|center_vertical"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:background="@drawable/round"
                android:id="@+id/view8790"
                android:layout_gravity="right"
                android:layout_below="@+id/view87"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/addCPUPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="Next"
                    android:imeOptions="actionUnspecified"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="#00cecece"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#282f3d"
                    android:gravity="center|center_vertical"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:background="@drawable/round"
                android:id="@+id/view87900"
                android:layout_gravity="right"
                android:layout_below="@+id/view8790"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/addGPUPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="Next"
                    android:imeOptions="actionUnspecified"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="#00cecece"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#282f3d"
                    android:gravity="center|center_vertical"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:background="@drawable/round"
                android:id="@+id/view879090"
                android:layout_gravity="right"
                android:layout_below="@+id/view87900"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/addRamPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="Next"
                    android:imeOptions="actionUnspecified"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="#00cecece"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#282f3d"
                    android:gravity="center|center_vertical"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:background="@drawable/round"
                android:id="@+id/view879070"
                android:layout_gravity="right"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true">

                <EditText
                    android:id="@+id/addStoragePrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="Next"
                    android:imeOptions="actionUnspecified"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="#00cecece"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#282f3d"
                    android:gravity="center|center_vertical"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="205dp"
                android:layout_height="40dp"
                android:background="@drawable/round"
                android:id="@+id/scrollView"
                android:layout_below="@+id/view3"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp">

                <AutoCompleteTextView
                    android:id="@+id/addCPU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CPU"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:imeActionLabel="Next"
                    android:singleLine="true"
                    android:background="#00cecece"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColorHint="#ffffff"
                    android:textColor="#29303e"
                    android:gravity="center|center_vertical" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="205dp"
                android:layout_height="40dp"
                android:background="@drawable/round"
                android:id="@+id/view9"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/view70"
                android:layout_alignParentStart="true">

                <EditText
                    android:id="@+id/addCase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Case"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="Next"
                    android:imeOptions="actionUnspecified"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="#00cecece"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#282f3d"
                    android:gravity="center|center_vertical" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="205dp"
                android:layout_height="40dp"
                android:background="@drawable/round"
                android:id="@+id/view99"
                android:layout_below="@+id/scrollView"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/addGPU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="GPU"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="Next"
                    android:imeOptions="actionUnspecified"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="#00cecece"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#282f3d"
                    android:gravity="center|center_vertical" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="205dp"
                android:layout_height="40dp"
                android:background="@drawable/round"
                android:id="@+id/view8"
                android:layout_below="@+id/view99"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/addRam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="RAM"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="Next"
                    android:imeOptions="actionUnspecified"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="#00cecece"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#282f3d"
                    android:gravity="center|center_vertical" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="205dp"
                android:layout_height="40dp"
                android:background="@drawable/round"
                android:id="@+id/view7"
                android:layout_below="@+id/view8"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/addStorage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Storage"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="Next"
                    android:imeOptions="actionUnspecified"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="#00cecece"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#282f3d"
                    android:gravity="center|center_vertical" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/round"
                android:id="@+id/view70"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="60dp">

                <EditText
                    android:id="@+id/addTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Build Name"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="Next"
                    android:imeOptions="actionUnspecified"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="#00cecece"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#282f3d"
                    android:gravity="center|center_vertical" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/addPC"
                android:textColor="#FFFFFF"
                android:textSize="50sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
