<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.idorosh.i_dorosh_widget.AddFragment">

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/newPhoneName"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textColorHint="#ced93927"
        android:hint="Name"
        android:gravity="center_horizontal"
        android:layout_below="@+id/newPhoneLabel"
        android:layout_alignLeft="@+id/newPhoneCarrier"
        android:layout_alignStart="@+id/newPhoneCarrier" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/newPhoneOS"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:textColorHint="#ced93927"
        android:hint="OS"
        android:gravity="center_horizontal"
        android:layout_below="@+id/newPhoneName"
        android:layout_alignLeft="@+id/newPhoneName"
        android:layout_alignStart="@+id/newPhoneName" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/newPhoneCarrier"
        android:layout_gravity="center_horizontal"
        android:textColorHint="#ced93927"
        android:hint="Carriers"
        android:layout_marginTop="45dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/newPhoneOS"
        android:layout_alignLeft="@+id/newPhonePrice"
        android:layout_alignStart="@+id/newPhonePrice" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Phone"
        android:id="@+id/newPhoneLabel"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:background="#ced93927"
        android:paddingLeft="125dp"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/newPhonePrice"
        android:layout_gravity="center_horizontal"
        android:textColorHint="#ced93927"
        android:hint="Price"
        android:gravity="center_horizontal"
        android:paddingTop="50dp"
        android:layout_below="@+id/newPhoneCarrier"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Enter Phone Name"
        android:id="@+id/phoneNameLabel"
        android:layout_below="@+id/newPhoneName"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Enter Phone OS"
        android:id="@+id/newPhoneOSLabel"
        android:gravity="center_horizontal"
        android:layout_below="@+id/newPhoneOS"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Enter Phone Carriers"
        android:id="@+id/newPhoneCarriersLabel"
        android:gravity="center_horizontal"
        android:layout_alignTop="@+id/newPhonePrice"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Enter Phone Price"
        android:id="@+id/newPhonePriceLabel"
        android:layout_below="@+id/newPhonePrice"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
