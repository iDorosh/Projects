<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="idorosh.com.i_dorosh_mapping.FormFragment"
    android:background="#ffffff">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleText"
        android:layout_centerHorizontal="true"
        android:hint="Statue of Liberty, Mall, School"
        android:gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/caption"
        android:layout_below="@+id/titleText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:gravity="center_horizontal"
        android:hint="Hanging out with my #bff #mall" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton"
        android:src="@drawable/camera"
        android:scaleType="fitCenter"
        android:background="#ffffff"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Title"
        android:id="@+id/textView3"
        android:layout_below="@+id/titleText"
        android:layout_centerHorizontal="true"
        android:textColor="#15407b"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Caption"
        android:id="@+id/textView4"
        android:layout_below="@+id/caption"
        android:layout_centerHorizontal="true"
        android:textColor="#15407b"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Take Image"
        android:id="@+id/textView5"
        android:textColor="#15407b"
        android:textSize="20sp"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="No Image"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/capturedImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:id="@+id/capturedImage"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter" />

</RelativeLayout>
